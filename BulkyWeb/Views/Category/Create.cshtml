@model Category

<form method="post"> 
    <div >
        <div >

            <h2 class="text-primary">Create Category</h2>

        </div>

        <div asp-validation-summary="ModelOnly"></div>

        <div class="mb-3 row p-1">
            <label asp-for="Name" class="p=0"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>

        </div>
        <div class="mb-3 row p-1">
            <label asp-for="DisplayOrder" class="p=0"></label>
            <input asp-for="DisplayOrder" class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>

        </div>
        <div class="row">
            <div class="col-6">
                <button class="btn btn-primary" type="submit" >Submit</button>
            </div>
            <div class="col-6">
                <button asp-controller="Category" asp-action="Index" class="btn btn-primary" type="submit">Back to List</button>
            </div>
        </div>
       
    </div>
</form>

@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial" />
    }
}
